{% extends "layouts/base.html.twig" %}

{% block title %}
	{{ parent() }}
{% endblock %}


{% block body %}
	<div class="container text-center">
		<h1 class="pb-4">Mes projets</h1>
		{% if flashMessage %}
			<div class="alert alert-success flashMessage text-center">{{ flashMessage }}</div>
		{% endif %}
		<div class="row ">
			{% for blogPost in blogPosts %}
				<div class="col-md-6 text-center">
					<div class="card mb-3">
						<div class="card-body">
							<h3 class="card-title">{{ blogPost.title }}</h3>

							<div>{{ blogPost.headerPost }}</div>
							<em>Modifi√© le :
								{{ blogPost.lastModificationDate ? blogPost.lastModificationDate|date("d/m/Y") : blogPost.creationDate|date("d/m/Y") }}</em>
							<div>
								<a href="/blogPosts/{{ blogPost.id }}" class="btn btn-primary mt-3">Voir l'article</a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
