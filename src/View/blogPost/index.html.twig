{% extends "layouts/base.html.twig" %}

{% block title %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container text-center">
		<h1>Page des projets</h1>
		<div class="row ">
			{% for blogPost in blogPosts %}
				<div class="col-md-4 text-center">
					<div>
						<h3>{{ blogPost.title }}</h3>
						<div>{{ blogPost.headerPost }}</div>
						<em>Modifi√© le : {{ blogPost.lastModificationDate ? blogPost.lastModificationDate|date("m/d/Y") : blogPost.creationDate|date("m/d/Y") }}</em>
						<a href="/blogPosts/{{ blogPost.id }}" class="btn btn-primary">Voir l'article</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
