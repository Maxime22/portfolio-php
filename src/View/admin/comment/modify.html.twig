{% extends "admin/layouts/adminLayout.html.twig" %}

{% block title %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Modification du commentaire {{ commentId }}</h1>
		{% if errors %}
			{% for error in errors %}
				<div class="alert alert-danger">{{ error }}</div>
			{% endfor %}
		{% endif %}
		<form action="" method="post">
			<div class="form-group">
				<label for="title">Titre</label>
				<input class="form-control" type="text" name="title" value={{ postDatas.title|e }}>
			</div>
			<div class="form-group">
				<label for="content">Contenu</label>
				<textarea class="form-control" name="content">{{ postDatas.content|e }}</textarea>
			</div>
			<button class="btn btn-primary" type="submit">Sauvegarder</button>
		</form>
	</div>
{% endblock %}
