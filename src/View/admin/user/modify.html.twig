{% extends "admin/layouts/adminLayout.html.twig" %}

{% block title %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Modification de l'utilisateur {{ userId }}</h1>
		{% if errors %}
			{% for error in errors %}
				<div class="alert alert-danger">{{ error }}</div>
			{% endfor %}
		{% endif %}
		<form action="" method="post">
			<div class="form-group">
				<label for="username">Pseudo</label>
				<input class="form-control" type="text" name="username" value="{{ postDatas.username }}">
			</div>
			<div class="form-group">
				<label for="mail">Mail</label>
				<input class="form-control" type="text" name="mail" value="{{ postDatas.mail }}">
			</div>
			<div class="form-group">
				<label for="roles">RÃ´les</label>
				<select multiple class="form-control" name="roles[]">
					<option value="user" {{ ("user" in postDatas.roles) ? 'selected' : '' }}>User</option>
					<option value="admin" {{ ("admin" in postDatas.roles) ? 'selected' : '' }}>Admin</option>
				</select>
			</div>
			<div class="form-group">
				<label for="isValidated">Validation</label>
				<select class="form-control" name="isValidated">
					<option value="0" {{ ("0" == postDatas.isValidated) ? 'selected' : '' }}>Non</option>
					<option value="1" {{ ("1" == postDatas.isValidated) ? 'selected' : '' }}>Oui</option>
				</select>
			</div>
			<button class="btn btn-primary" type="submit">Sauvegarder</button>
		</form>
	</div>
{% endblock %}
